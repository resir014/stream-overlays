{
  "version": 2,
  "regions": ["sin1"],
  "build": {
    "env": {
      "NEXT_PUBLIC_SAWERIA_STREAM_KEY": "@saweria-stream-key",
      "NEXT_PUBLIC_NOTION_STREAMS_TABLE_ID": "@notion-streams-table-id"
    }
  },
  "headers": [
    {
      "source": "^/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "^/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
