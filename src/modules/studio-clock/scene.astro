---
import OverlayWrapper from '~/components/overlay-wrapper/index.astro';
import SceneWrapper from '~/components/scene-wrapper/index.astro';
import { StudioClockInterface } from './components/studio-clock-interface';
import Document from '../_document.astro';
import { Image } from 'astro:assets';
---

<Document>
  <OverlayWrapper>
    <SceneWrapper transparent class="bg-chungking-black/90">
      <div class="grid grid-rows-scene-wrapper grid-cols-1 flex-1">
        <div class="flex flex-col items-center justify-center p-12 space-y-6">
          <div class="flex items-center justify-center w-[672px] h-[672px]">
            <StudioClockInterface
              hideTimezone
              transparent
              className="scale-150"
              client:only="react"
            >
              <Fragment slot="fallback">
                <StudioClockInterface hideTimezone transparent className="scale-150" />
              </Fragment>
            </StudioClockInterface>
          </div>
          <Image
            src="/static/resir014-logo-wordmark.png"
            width={369}
            height={114}
            alt="resir014 logo"
          />
        </div>
      </div>
    </SceneWrapper>
  </OverlayWrapper>
</Document>
