---
import OverlayWrapper from '~/components/overlay-wrapper/index.astro';
import BottomBarEvents from './components/events-section/index.astro';
import { BottomBarClock } from './components/clock-section';
import Document from '../_document.astro';
---

<Document>
  <OverlayWrapper>
    <div
      class:list={[
        'grid grid-cols-bottom-bar w-full h-full',
        'text-chungking-white bg-chungking-black border-t-2 border-chungking-white',
        'max-h-[64px]',
      ]}
    >
      <BottomBarEvents />
      <div class="flex items-center justify-end px-12">
        <div class="flex items-center pl-4 text-right space-x-2">
          <BottomBarClock client:only="react">
            <slot name="fallback">
              <div
                class:list={[
                  'flex items-center justify-center',
                  'w-[96px] h-[32px] py-1',
                  'bg-chungking-white rounded-full',
                ]}
              >
              </div>
            </slot>
          </BottomBarClock>
        </div>
      </div>
    </div>
  </OverlayWrapper>
</Document>
